# =============================================================================
# AutoMatResearch - arXiv论文自动爬取和分析系统
# 环境变量配置模板
# =============================================================================

# DeepSeek API配置
# 获取API密钥: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Flask Web应用配置
# 生成密钥: python -c "import secrets; print(secrets.token_hex(16))"
FLASK_SECRET_KEY=your_flask_secret_key_here
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 数据库配置
# 使用SQLite数据库，文件路径相对于项目根目录
DATABASE_URL=sqlite:///data/database/arxiv_papers.db

# arXiv爬取配置
# 每日最大爬取论文数量
MAX_PAPERS_PER_DAY=20
# 搜索关键词列表 (JSON格式)
SEARCH_KEYWORDS=["machine learning", "deep learning", "artificial intelligence", "neural networks", "materials science", "computational materials"]
# arXiv分类 (可选)
ARXIV_CATEGORIES=["cs.AI", "cs.LG", "cs.CV", "cond-mat.mtrl-sci"]
# 请求延迟间隔 (秒)
REQUEST_DELAY=1.0
# 请求超时时间 (秒)
REQUEST_TIMEOUT=30

# DeepSeek分析配置
# 每篇论文的最大字符数限制
MAX_PAPER_LENGTH=50000
# 分析提示模板文件路径 (可选)
ANALYSIS_PROMPT_TEMPLATE=
# 是否启用批量分析
BATCH_ANALYSIS=True
# 批量处理大小
BATCH_SIZE=5

# 日志配置
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件路径 (相对于项目根目录)
LOG_FILE=logs/arxiv_scraper.log
# 是否启用日志轮转
LOG_ROTATION=True
# 日志文件最大大小 (MB)
LOG_MAX_SIZE=10
# 保留日志文件数量
LOG_BACKUP_COUNT=5

# 任务调度配置
# 每天执行时间 (格式: HH:MM)
SCHEDULE_TIME=09:00
# 时区设置
TIMEZONE=Asia/Shanghai
# 是否启用周末任务
ENABLE_WEEKEND=True

# 数据导出配置
# 导出文件保存路径 (相对于项目根目录)
EXPORT_PATH=data/exports/
# 默认导出格式
DEFAULT_EXPORT_FORMAT=json
# 是否自动清理过期导出文件
AUTO_CLEAN_EXPORTS=True
# 导出文件保留天数
EXPORT_RETENTION_DAYS=30

# 性能和缓存配置
# 是否启用Redis缓存 (需要安装redis)
ENABLE_REDIS_CACHE=False
# Redis连接URL
REDIS_URL=redis://localhost:6379/0
# 缓存过期时间 (秒)
CACHE_EXPIRE=3600

# 开发和调试配置
# 是否启用调试模式
DEBUG=False
# 是否启用性能监控
ENABLE_PROFILING=False
# 测试模式 (使用模拟数据)
TEST_MODE=False

# =============================================================================
# 使用说明:
# 1. 复制此文件为 .env: cp .env.example .env
# 2. 根据你的环境修改配置值
# 3. 确保敏感信息 (如API密钥) 不要提交到版本控制系统
# 4. .env 文件已在 .gitignore 中配置，不会被Git跟踪
# =============================================================================