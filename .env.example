# DeepSeek API配置
# 获取API密钥: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Flask Web应用配置
# 生成密钥: python -c "import secrets; print(secrets.token_hex(16))"
FLASK_SECRET_KEY=your_flask_secret_key_here
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

DATABASE_URL=sqlite:///data/database/arxiv_papers.db

# arXiv爬取配置
MAX_PAPERS_PER_DAY=20
SEARCH_KEYWORDS=["materials science", "machine learning"]
ARXIV_CATEGORIES=["cs.AI", "cs.LG", "cs.CV", "cond-mat.mtrl-sci"]
REQUEST_DELAY=1.0
REQUEST_TIMEOUT=30

# DeepSeek分析配置
# 每篇论文的最大字符数限制
MAX_PAPER_LENGTH=50000
# 分析提示模板文件路径 (可选)
ANALYSIS_PROMPT_TEMPLATE=
BATCH_ANALYSIS=True
BATCH_SIZE=5

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=arxiv_scraper.log
LOG_ROTATION=True
LOG_MAX_SIZE=10
LOG_BACKUP_COUNT=5

SCHEDULE_TIME=09:00
TIMEZONE=Asia/Shanghai
ENABLE_WEEKEND=True

EXPORT_PATH=data/exports/
DEFAULT_EXPORT_FORMAT=json
AUTO_CLEAN_EXPORTS=True
EXPORT_RETENTION_DAYS=30

ENABLE_REDIS_CACHE=False
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRE=3600

DEBUG=False
ENABLE_PROFILING=False
TEST_MODE=False